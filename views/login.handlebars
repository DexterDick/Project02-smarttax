<div class="container mt-3">
    <form class="form form-group login-form">
        <h3 class="text-success mb-4 mt-4 text-center"><b>Login</b></h3>
        <div class="row m-3">
            <label for="email-login" class="col-sm-2 col-form-label"><b
                >Email:</b></label>
            <div class="col-sm-10">
                <input
                    type="email"
                    class="form-control"
                    id="email-login"
                    placeholder="Enter email"
                    name="email"
                    required
                />
            </div>
        </div>
        <div class="row m-3">
            <label for="password-login" class="col-sm-2 col-form-label"><b
                >Password:</b></label>
            <div class="col-sm-10">
                <input
                    type="password"
                    class="form-control"
                    id="password-login"
                    placeholder="Enter password"
                    name="pswd"
                    required
                />
            </div>
        </div>
        <div class="m-3 text-center">
            <button
                class="btn btn-block btn-user full-width"
                type="submit"
            >LOGIN</button>
        </div>
    </form>
</div>

<script src="./js/login.js"></script>