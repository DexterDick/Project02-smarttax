<div class="container mt-3">
    <h3 class="text-light mb-4">Account Creation</h3>
    <form class="form form-group signup-form">
        <div class="row m-3">
            <label for="name-signup" class="col-sm-2 col-form-label">Name:</label>
            <div class="col-sm-10">
                <input type="text" class="form-control" id="name-signup" placeholder="Enter your name!" name="email">
            </div>
        </div>
        <div class="row m-3">
            <label for="email-signup" class="col-sm-2 col-form-label">Email:</label>
            <div class="col-sm-10">
                <input type="email" class="form-control" id="email-signup" placeholder="Enter your email!" name="email">
            </div>
        </div>
        <div class="row m-3">
            <label for="password-signup" class="col-sm-2 col-form-label">Password:</label>
            <div class="col-sm-10">
                <input type="password" class="form-control" id="password-signup" placeholder="Enter your password!" name="pswd">
            </div>
        </div>
        <div class="m-3 text-center">
            <button class="btn btn-block btn-user full-width" type="submit">SIGNUP</button>
        </div>
    </form>
</div>

<script src="./js/accountCreation.js"></script>
