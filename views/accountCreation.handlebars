<div class="container mt-3">
  <form class="form form-group signup-form col-lg-6 col-sm-12">
    <h3 class="text-success mb-4 mt-4 text-center"><b>Account Creation</b></h3>
    <div class="row m-3">
      <label for="name-signup" class="col-sm-2 col-form-label"><b
        >Name</b>:</label>
      <div class="col-sm-10">
        <input
          type="text"
          class="form-control"
          id="name-signup"
          placeholder="Enter your name!"
          name="name"
          required
        />
      </div>
    </div>
    <div class="row m-3">
      <label for="email-signup" class="col-sm-2 col-form-label"><b
        >Email:</b></label>
      <div class="col-sm-10">
        <input
          type="email"
          class="form-control"
          id="email-signup"
          placeholder="Enter your email!"
          name="email"
          required
        />
      </div>
    </div>
    <div class="row m-3">
      <label for="password-signup" class="col-sm-2 col-form-label"><b
        >Password:</b></label>
      <div class="col-sm-10">
        <input
          type="password"
          class="form-control"
          id="password-signup"
          placeholder="Enter your password!(Minimum: 8 Characters)"
          name="pswd"
          required
        />
      </div>
    </div>
    <div class="m-3 text-center">
      <button class="btn btn-user full-width" type="submit">SIGNUP</button>
    </div>
  </form>
</div>

<script src="./js/accountCreation.js"></script>