<div class="container container-fluid mt-3 text-center">
  <h2 class="text-white mb-5">Welcome, {{name}}!</h2>
  <form class="form form-group account-form  col-lg-6 col-sm-12">
    <h3 class="text-success mb-4 mt-4 text-center"><b>Edit Account Info</b></h3>
    <input type="hidden" id="id" value="{{id}}" />
    <div class="row m-3">
      <label for="email-edit" class="col-sm-2 col-form-label"><b>Email:</b></label>
      <div class="col-sm-10">
        <input
          type="text" readonly 
          class="form-control-plaintext"
          id="email-edit"
          name="email"
          value={{email}}
        />
      </div>
    </div>
    <div class="row m-3">
      <label for="name-edit" class="col-sm-2 col-form-label"><b>Name:</b></label>
      <div class="col-sm-10">
        <input
          type="text"
          class="form-control"
          id="name-edit"
          placeholder="Name"
          name="name"
          required
        />
      </div>
    </div>
    <div class="row m-3">
      <label
        for="password-edit"
        class="col-sm-2 col-form-label"
      ><b>Password:</b></label>
      <div class="col-sm-10">
        <input
          type="password"
          class="form-control"
          id="password-edit"
          placeholder="Password minimum: 8 characters"
          name="pswd"
          required
        />
      </div>
    </div>
    <div class="m-3 text-center">
      <button class="btn btn-user full-width" type="submit">Save Edit</button>
    </div>
  </form>
</div>

<div class="container container-fluid mt-5 row justify-content-center text-center">
  <h3 class="text-light mb-4">Tax Reports</h3>
  {{#if taxReports.length}}
    {{#each taxReports as |taxReport|}}
      <div class="card col-md-3 m-3 tax-result">
        <a href="/taxReport/{{taxReport.id}}">
          <div class="card-img-top report-link mt-2" data-id="{{taxReport.id}}" alt="Tax Chart">
            <span class="taxSlot" hidden></span>
            <i class="fa-solid fa-chart-pie fa-lg my-5 text-white"></i>
          </div>
        </a>
        <div class="card-body taxReport-list">
          <h5 class="card-title inputYear">{{taxReport.year}}</h5>
          $<span class="tax-details inputIncome" value="{{taxReport.income}}">{{taxReport.income}}</span>
          <button class="btn btn-user full-width del-btn"  data-id="{{taxReport.id}}" type="button">Delete</button>
        </div>
      </div>
    {{/each}}
  {{else}}
    <p class="text-empty">No Tax Records</p>
  {{/if}}
</div>

<script src="./js/account.js"></script>
<script src="./js/taxReport.js"></script>
<script src="./js/taxInputs.js"></script>

